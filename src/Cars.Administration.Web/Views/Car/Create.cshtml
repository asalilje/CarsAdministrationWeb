@model Cars.Administration.Web.Models.FormModels.CreateCarForm

@{
    ViewBag.Title = "Create new car";
}

<h2>Create Car</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label class="control-label">Make</label><br/>
            <input name="Make" type="text" placeholder="Make" class="form-control input-lg"/>
        </div>

        <div class="form-group">
            <label class="control-label">Rental Price Per Day</label><br/>
            <input name="RentalPricePerDay" type="text" placeholder="RentalPricePerDay" class="form-control input-lg" />
        </div>

        <div class="form-group">
            <label class="control-label">Currency</label><br/>
            @Html.DropDownListFor(m => m.Currency, Model.AvailableCurrencies, new {@class = "form-control input-lg"})
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
