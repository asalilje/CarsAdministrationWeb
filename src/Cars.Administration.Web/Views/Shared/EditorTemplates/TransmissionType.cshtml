@using Cars.Administration.Web.Domain
@model TransmissionType
@{
	var options = Enum.GetValues(typeof (TransmissionType))
		.Cast<TransmissionType>()
		.Select(t => new SelectListItem
		{
			Text = t.ToString(),
			Value = t.ToString(),
			Selected = t == Model
		});
}

@Html.DropDownList("", options, new {@class = "form-control input-lg"})