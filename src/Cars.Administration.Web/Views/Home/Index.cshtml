@model IEnumerable<Cars.Administration.Web.Models.CarViewModel>

@{
	ViewBag.Title = "Car administration";
}

<div class="jumbotron">
	<h1>Car inventory</h1>
</div>


<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.Make)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.TransmissionType)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.RentalPricePerDay)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Currency)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Make)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.TransmissionType)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.RentalPricePerDay)
			</td>
			<td>
				@Html.EditorFor(modelItem => item.Currency)
			</td>
			<td>
				@Html.ActionLink("Delete", "Delete", "Car", new { carId = item.CarId }, null)
			</td>
		</tr>
	}

</table>